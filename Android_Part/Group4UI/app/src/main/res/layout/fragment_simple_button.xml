<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    <ImageView
		android:id="@+id/btn_center"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
		android:src="@drawable/stop_grey"
	    android:background="@color/white"
		/>
	<ImageView
	    android:id="@+id/btn_up_arrow"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_above="@id/btn_center"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/up"
	    android:background="@color/white" />
	<ImageView
	    android:id="@+id/btn_left_arrow"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_toLeftOf="@id/btn_center"
	    android:layout_below="@id/btn_up_arrow"
	    android:src="@drawable/left"
	    android:background="@color/white" />
	<ImageView
	    android:id="@+id/btn_right_arrow"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_toRightOf="@id/btn_center"
	    android:layout_below="@id/btn_up_arrow"
	    android:src="@drawable/right"
	    android:background="@color/white" />
	<ImageView
	    android:id="@+id/btn_down_arrow"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_below="@id/btn_center"
	    android:layout_toRightOf="@id/btn_left_arrow"
	    android:layout_toLeftOf="@id/btn_right_arrow"
	    android:src="@drawable/down"
	    android:background="@color/white" />
	
	
</RelativeLayout>
