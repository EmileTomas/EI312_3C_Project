<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/theme">

	    <com.example.console.Activity.SelectableButton
	        android:id="@+id/btn_gesture_simple"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
			android:gravity="center"
			android:text="SIMPLE"
	        android:textColor="@color/white"
			android:background="@color/theme"
	        android:textStyle="bold"/>

	    <com.example.console.Activity.SelectableButton
	        android:id="@+id/btn_gesture_flexible"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
	        android:text="FLEXIBLE"
	        android:textStyle="bold"
	        android:textColor="@color/sub_theme"
	        android:background="@color/theme" />

	    <com.example.console.Activity.SelectableButton
	        android:id="@+id/btn_gesture_path"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="PATH"
	        android:textStyle="bold"
	        android:textColor="@color/sub_theme"
	        android:background="@color/theme" />

	</LinearLayout>

	<FrameLayout
	        android:id="@+id/gesture_content"
	        android:background="@color/background"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="40">
	</FrameLayout>

</LinearLayout>
